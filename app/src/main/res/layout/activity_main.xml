<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.baobang.gameduangua.MainActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imgCharacterFirst"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/horse1_1"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="10dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imgCharacterSecond"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/horse2_1"
        tools:layout_editor_absoluteX="132dp"
        app:layout_constraintTop_toBottomOf="@+id/imgCharacterFirst"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/imgCharacterThird"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/horse3_1"
        tools:layout_editor_absoluteX="132dp"
        app:layout_constraintTop_toBottomOf="@+id/imgCharacterSecond"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/imgCharacterForth"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/horse4_1"
        tools:layout_editor_absoluteX="132dp"
        app:layout_constraintTop_toBottomOf="@+id/imgCharacterThird"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>
